#:kivy 2.0.0

<LogMessage>:
    markup: True
    halign: "left"
    size_hint: (1, None)
    text_size: (self.width, None)
    size: self.texture_size
    canvas.before:
        Color:
            rgb: self.background
        Rectangle:
            pos: self.pos
            size: self.size

<ScrollableStack>:
    do_scroll_x: False
    effect_cls: "ScrollEffect"
    content: content
    StackLayout:
        id: content
        size_hint: (1, None)
        height: max(self.parent.height, self.minimum_height)
        canvas.before:
            Color:
                rgb: root.background
            Rectangle:
                pos: self.pos
                size: self.size

<Logs>:
    background: [.1, .1, .1]

<Member>:
    orientation: "vertical"
    size_hint: (1, None)
    height: 50
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        AnchorLayout:
            anchor_x: "left"
            size_hint: (1, 1)
            pos_hint: {"x": 0, "y": 0}
            Label:
                text: str(root.id)
                valign: "center"
                color: [.05, .05, .05]
                bold: True
                size_hint: (None, None)
                size: (20, 20)
                canvas.before:
                    Color:
                        rgb: [1, 1, 0] if root.master else [1, 1, 1]
                    Rectangle:
                        pos: self.pos
                        size: self.size
        AnchorLayout:
            anchor_x: "center"
            size_hint: (1, 1)
            pos_hint: {"x": 0, "y": 0}
            Label:
                text: root.name
                valign: "center"
                bold: root.me
                height: 25
                font_size: 20
    Label:
        text: root.status[root.ready][0]
        color: root.status[root.ready][1]
        size_hint: (1, 1)
        font_size: 15

<Members>:
    background: [.05, .05, .05]

<Lobby>:
    orentation: "horizontal"
    requests: requests
    players: players
    footer: requests.footer
    header: players.header
    logs: requests.logs
    readyBtn: footer.ready
    disconnectBtn: header.disconnect
    members: players.members
    BoxLayout:
        id: requests
        orientation: "vertical"
        logs: logs
        footer: footer
        Logs:
            id: logs
        AnchorLayout:
            id: footer
            anchor_x: "center"
            anchor_y: "center"
            size_hint: (1, None)
            height: 80
            ready: ready
            canvas.before:
                Color:
                    rgb: [.025, .025, .025]
                Rectangle:
                    pos: self.pos
                    size: self.size
            RboBtn:
                id: ready
                size_hint: (None, None)
                size: (150, 40)
                text: "PrÃªt ?"
    BoxLayout:
        id: players
        header: header
        members: members
        orientation: "vertical"
        AnchorLayout:
            id: header
            anchor_x: "left"
            anchor_y: "center"
            size_hint: (1, None)
            height: 40
            padding: (20, 0)
            disconnect: disconnect
            canvas.before:
                Color:
                    rgb: [.025, .025, .025]
                Rectangle:
                    pos: self.pos
                    size: self.size
            RboBtn:
                id: disconnect
                size_hint: (None, None)
                size: (50, self.parent.height / 2)
                text: "\u21d0"
        Members:
            id: members
