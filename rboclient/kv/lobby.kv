#:kivy 2.0.0

<LobbyCtxAction>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: (None, 1)
    width: 100
    button: button
    RboBtn:
        id: button
        size_hint: (None, None)
        size: (80, tbarHeight - 10)
        text: root.text

<LobbyCtxActions>:
    orientation: "horizontal"
    LobbyCtxAction:
        id: disconnect
        text: "\u21d0"
    LobbyCtxAction:
        id: ready
        text: "PrÃªt"

<LogMessage>:
    markup: True
    halign: "left"
    size_hint: (1, None)
    text_size: (self.width, None)
    size: self.texture_size
    canvas.before:
        Color:
            rgb: self.background
        Rectangle:
            pos: self.pos
            size: self.size

<ScrollableStack>:
    do_scroll_x: False
    effect_cls: "ScrollEffect"
    content: content
    StackLayout:
        id: content
        size_hint: (1, None)
        height: max(self.parent.height, self.minimum_height)
        canvas.before:
            Color:
                rgb: root.background
            Rectangle:
                pos: self.pos
                size: self.size

<Logs>:
    background: [.1, .1, .1]

<Member>:
    orientation: "vertical"
    size_hint: (1, None)
    height: 50
    canvas.before:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        AnchorLayout:
            anchor_x: "left"
            size_hint: (1, 1)
            pos_hint: {"x": 0, "y": 0}
            Label:
                text: str(root.id)
                valign: "center"
                color: [.05, .05, .05]
                bold: True
                size_hint: (None, None)
                size: (20, 20)
                canvas.before:
                    Color:
                        rgb: [1, 1, 0] if root.master else [1, 1, 1]
                    Rectangle:
                        pos: self.pos
                        size: self.size
        AnchorLayout:
            anchor_x: "center"
            size_hint: (1, 1)
            pos_hint: {"x": 0, "y": 0}
            Label:
                text: root.name
                valign: "center"
                height: 25
                font_size: 20
    Label:
        text: root.status[root.ready][0]
        color: root.status[root.ready][1]
        size_hint: (1, 1)
        font_size: 15

<Members>:
    background: [.05, .05, .05]

<Lobby>:
    orentation: "horizontal"
    logs: logs
    members: members
    Logs:
        id: logs
    Members:
        id: members
