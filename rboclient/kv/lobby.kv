#:kivy 2.0.0

<LobbyCtxAction>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: (None, 1)
    width: 100
    button: button
    RboBtn:
        id: button
        size_hint: (None, None)
        size: (80, tbarHeight - 10)
        text: root.text

<LobbyCtxActions>:
    orientation: "horizontal"
    LobbyCtxAction:
        id: disconnect
        text: "\u21d0"
    LobbyCtxAction:
        id: ready
        text: "PrÃªt"

<LogMessage>:
    markup: True
    valign: "center"
    halign: "left"
    size_hint: (1, None)
    text_size: (self.width, None)
    size: self.texture_size
    canvas.before:
        Color:
            rgb: self.background
        Rectangle:
            pos: self.pos
            size: self.size

<Logs>:
    do_scroll_x: False
    effect_cls: "ScrollEffect"
    StackLayout:
        id: logs
        size_hint: (1, None)
        height: max(self.parent.height, self.minimum_height)
        canvas.before:
            Color:
                rgb: .1, .1, .1
            Rectangle:
                pos: self.pos
                size: self.size

<Lobby>:
    orentation: "horizontal"
    logs: logs
    Logs:
        id: logs
    FloatLayout:
        canvas.before:
            Color:
                rgb: .05, .05, .05
            Rectangle:
                pos: self.pos
                size: self.size
