#:kivy 2.0.0

<LobbyCtxAction>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: (None, 1)
    width: 100
    button: button
    RboBtn:
        id: button
        size_hint: (None, None)
        size: (80, tbarHeight - 10)
        text: root.text
        disabled: not root.enabled
        background_color: [0, 0, 0, 0] if self.disabled else btnBackground

<LobbyCtxActions>:
    orientation: "horizontal"
    LobbyCtxAction:
        id: disconnect
        text: "\u21d0"
    LobbyCtxAction:
        id: ready
        text: "PrÃªt"
        enabled: root.open

<LogMessage>:
    markup: True
    halign: "left"
    size_hint: (1, None)
    text_size: (self.width, None)
    size: self.texture_size
    canvas.before:
        Color:
            rgb: self.background
        Rectangle:
            pos: self.pos
            size: self.size

<Logs>:
    background: [.1, .1, .1]

<Member>:
    orientation: "vertical"
    size_hint: (1, None)
    height: 50
    canvas.before:
        Color:
            rgb: dark
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        AnchorLayout:
            anchor_x: "left"
            size_hint: (1, 1)
            pos_hint: {"x": 0, "y": 0}
            Label:
                text: str(root.id)
                valign: "center"
                color: middle
                bold: True
                size_hint: (None, None)
                size: (20, 20)
                canvas.before:
                    Color:
                        rgb: [1, 1, 0 if root.master else 1]
                    Rectangle:
                        pos: self.pos
                        size: self.size
        AnchorLayout:
            anchor_x: "center"
            size_hint: (1, 1)
            pos_hint: {"x": 0, "y": 0}
            Label:
                text: root.name
                valign: "center"
                bold: root.me
                height: 25
                font_size: 20
    Label:
        text: root.states[root.status][0]
        color: root.states[root.status][1]
        size_hint: (1, 1)
        font_size: 15

<Members>:
    background: middle

<Lobby>:
    orentation: "horizontal"
    logs: logs
    members: members
    Logs:
        id: logs
    FloatLayout:
        size_hint: (0.05, 1)
        canvas.before:
            Color:
                rgb: middle
            Rectangle:
                pos: self.pos
                size: self.size
    Members:
        id: members
