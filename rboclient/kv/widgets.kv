#:kivy 2.0.0

#:set btnBackground [1, .6, 0]
#:set popupTitle [1, 1, 1]

<RboBtn@Button>:
    background_color: btnBackground
    font_name: "DejaVuSans"
    font_size: 20

<RboInputRow>:
    orientation: "horizontal"
    size_hint: (1, None)
    height: 40

<HostInput>:
    addressInput: address
    address: address.text
    portInput: port
    port: port.text
    RboInput:
        id: address
        hint_text: "Adresse"
    Label:
        text: ":"
        size_hint: (None, 1)
        width: 10
        padding_y: 15
        font_size: 30
        valign: "center"
        color: [.7, .7, .7, 1]
    NumericRboInput:
        id: port
        hint_text: "Port"
        digits: 5
        max: 65535
        size_hint: (.4, 1)

<RboOption>:
    orientation: "horizontal"
    size_hint: (1, None)
    height: 30
    padding_y: 20
    checkbox: checkbox
    enabled: checkbox.active
    CheckBox:
        id: checkbox
        size_hint: (.1, 1)
        color: [1, .5, 0, 1]
    Label:
        text: root.label
        color: [.8, .8, .8, 1]
        haligh: "left"
        valign: "center"
        font_size: 20
        text_size: (self.width, self.height)
        size: self.texture_size

<PlayerInput>:
    idInput: playerid
    playerID: playerid.text
    nameInput: name
    name: name.text
    spacing: 10
    NumericRboInput:
        id: playerid
        size_hint: (.25, 1)
        hint_text: "ID"
        digits: 3
        max: 255
    RboInput:
        id: name
        hint_text: "Nom du joueur"

<RboInput>:
    multiline: False
    font_size: self.height - 15
    write_tab: False

<Separator@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: (1, None)
    height: 30
    FloatLayout:
        size_hint: (1, None)
        height: 4
        canvas.before:
            Color:
                rgb: .8, .8, .8, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [4,]

<LocalhostOption@RboFillOption>:
    label: "Hôte local ?"
    field: "address"
    fill: "localhost"

<MasterOption@RboFillOption>:
    label: "Maître de la room ?"
    field: "playerid"
    fill: "0"

<ScrollableStack>:
    do_scroll_x: False
    effect_cls: "ScrollEffect"
    content: content
    StackLayout:
        id: content
        size_hint: (1, None)
        height: max(self.parent.height, self.minimum_height)
        canvas.before:
            Color:
                rgb: root.background
            Rectangle:
                pos: self.pos
                size: self.size

<TextInputContent>:
    orientation: "vertical"
    value: input.text
    padding: 10
    spacing: 10
    value: input.text
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        RboInput:
            size_hint: (.7, None)
            height: 30
            id: input
            hint_text: root.hint
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        RboBtn:
            text: "Valider"
            on_release: root.dispatch("on_submit", root.value)

<TextInputPopup>:
    size_hint: (None, None)
    size: (300, 150)
    auto_dismiss: False
    title_color: popupTitle
    separator_height: 2
    separator_color: popupTitle
