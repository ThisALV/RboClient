#:kivy 2.0.0

<FieldsZone@BoxLayout>:
    orientation: "vertical"
    size_hint: (1, None)
    spacing: 10

<Fields>:
    pos_hint: {"x": 0, "y": 0}
    orientation: "vertical"
    padding: (15, 40)
    spacing: 30
    hostInput: hostInput
    playerInput: playerInput
    localhostOption: localhost
    masterOption: master
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        FieldsZone:
            HostInput:
                id: hostInput
            LocalhostOption:
                id: localhost
                input: root.hostInput
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        FieldsZone:
            PlayerInput:
                id: playerInput
            MasterOption:
                id: master
                input: root.playerInput

<ResolutionInput@NumericRboInput>:
    size_hint: (None, 1)
    width: 100
    digits: 4

<Graphics>:
    pos_hint: {"x": 0, "y": 0}
    orientation: "vertical"
    padding: (30, 40)
    spacing: 20
    windowWidth: windowWidth
    windowHeight: windowHeight
    fullscreenOption: fullscreen
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        Label:
            text: "Résolution fenêtre :"
            font_size: 25
            size_hint: (None, None)
            size: self.texture_size
        RboInputRow:
            spacing: 15
            ResolutionInput:
                id: windowWidth
                hint_text: "Largeur"
            Label:
                text: "\u00d7"
                size_hint: (None, 1)
                width: self.texture_size[0]
                font_size: 25
            ResolutionInput:
                id: windowHeight
                hint_text: "Hauteur"
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        RboOption:
            id: fullscreen
            label: "Plein écran par défaut ?"

