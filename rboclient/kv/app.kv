#:kivy 2.0.0

#:set tbarButtonSize (40, 25) 
#:set tbarHeight 35
#:set quitBtnSide tbarHeight - 5

#:set dark [0, 0, 0]
#:set middle [.05, .05, .05]
#:set bright [.1, .1, .1]

#:set errorColor [1, .2, .2, 1]

<ErrorMessage>:
    anchor_x: "center"
    anchor_y: "center"
    Label:
        size_hint: (.8, .8)
        color: errorColor
        text_size: (self.width, None)
        size: self.texture_size
        halign: "center"
        text: self.parent.text

<ErrorPopup>:
    size_hint: (None, None)
    size: (400, 300)
    auto_dismiss: False
    title_color: errorColor
    separator_color: errorColor

<RboBtn@Button>:
    background_color: [1, .6, 0, 1]
    font_name: "DejaVuSans"
    font_size: 20

<QuitButton>:
    font_name: "DejaVuSans"
    font_size: 25
    color: [.7, 0, 0, 1]
    text: "\u00d7"

<TitleBar>:
    orientation: "horizontal"
    canvas.before:
        Color:
            rgb: dark
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: "center"
        Label:
            text: root.title
            color: [1, 1, 1]
            bold: True
            font_size: 15
    AnchorLayout:
        anchor_x: "right"
        padding: [(tbarHeight - quitBtnSide) / 2, 0]
        QuitButton:
            size_hint: (None, None)
            size: (quitBtnSide, quitBtnSide)

<Main>:
    titleBar: titleBar
    orientation: "vertical"
    TitleBar:
        id: titleBar
        size_hint: (1, None)
        height: tbarHeight

Main:

