#:kivy 2.0.0

#:set tbarButtonSize (mm(8.3), mm(7.2))
#:set tbarHeight mm(8)
#:set tbarColor .1, .1, .1
#:set quitBtnSide tbarHeight - mm(2)

<HomeCtxActions>:
    anchor_x: "left"
    button: button
    padding: [mm(1), 0]
    Button:
        id: button
        size_hint: (None, None)
        size: tbarButtonSize
        font_name: "DejaVuSans"
        font_size: mm(5.8)
        text: "\u2699"

<LobbyCtxActions>:
    button: button
    Button:
        id: button
        text: "PrÃªt"

<QuitButton>:
    font_name: "DejaVuSans"
    font_size: mm(6.5)
    color: [.7, 0, 0, 1]
    text: "\u00d7"

<TitleBar>:
    orientation: "horizontal"
    canvas.before:
        Color:
            rgb: tbarColor
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: "center"
        Label:
            text: root.title
            color: [1, 1, 1, 1]
            bold: True
            font_size: mm(5)
    AnchorLayout:
        anchor_x: "right"
        padding: [(tbarHeight - quitBtnSide) / 2, 0]
        QuitButton:
            size_hint: (None, None)
            size: (quitBtnSide, quitBtnSide)

<Main>:
    titleBar: titleBar
    orientation: "vertical"
    TitleBar:
        id: titleBar
        size_hint: (1, None)
        height: tbarHeight

