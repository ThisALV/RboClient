#:kivy 2.0.0

#:set configTitle [1, 1, 1]

<Tab>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: (1, None)
    height: 80
    canvas.before:
        Color:
            rgb: middle if self.isSelected else bright
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        font_size: 20
        text: root.title

<Pannel>:
    tabs: tabs
    input: input
    Tabs:
        id: tabs
        size_hint: (.4, 1)
    FloatLayout:
        id: input
        canvas.before:
            Color:
                rgb: middle
            Rectangle:
                pos: self.pos
                size: self.size

<Content>:
    orientation: "vertical"
    pannel: pannel
    save: save
    cancel: cancel
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        pannel: pannel
        Pannel:
            id: pannel
            size_hint: (.9, .9)
    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, .05)
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "center"
            RboBtn:
                id: cancel
                text: "Annuler"
                size_hint: (.5, 1)
        AnchorLayout:
            anchor_x: "right"
            anchor_y: "center"
            RboBtn:
                id: save
                text: "OK"
                size_hint: (.5, 1)

<ConfigPopup>:
    size_hint: (None, None)
    size: (550, 600)
    title: "Préférences"
    title_size: 40
    title_color: configTitle
    separator_height: 3
    separator_color: configTitle
    background_normal: ""
    background: ""
    background_color: bright
