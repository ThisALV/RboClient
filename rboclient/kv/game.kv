#:kivy 2.0.0

<LobbyCtxAction>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint: (None, 1)
    width: 100
    button: button
    RboBtn:
        id: button
        size_hint: (None, None)
        size: (80, tbarHeight - 10)
        text: root.text

<LobbyCtxActions>:
    orientation: "horizontal"
    LobbyCtxAction:
        id: disconnect
        text: "\u21d0"
    LobbyCtxAction:
        id: ready
        text: "Prêt"

<Game>:
    canvas.before:
        Color:
            rgb: .1, .1, .1
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Label:
            text_size: (500, None)
            font_size: 30
            size: self.texture_size
            halign: "center"
            text: "Connecté.\nMembres : " + root.membersStr
