#:kivy 2.0.0

<SessionCtxActions>:
    DisconnectAction:
        id: disconnect

<BookMsg>:
    size_hint: (1, None)
    italic: True
    font_size: 15
    text_size: (self.width, None)
    size: self.texture_size
    halign: "center"

<BookSection>:
    size_hint: (1, None)
    height: 50
    bold: True
    font_size: 20

<Book>:
    background: bright
    spacing: 2

<Players>:
    size_hint: (.7, 1)

<Session>:
    orientation: "horizontal"
    book: book
    confirm: confirm
    BoxLayout:
        orientation: "vertical"
        size_hint: (1.4, 1)
        Book:
            id: book
            size_hint: (1, 3.5)
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            canvas.before:
                Color:
                    rgb: middle
                Rectangle:
                    pos: self.pos
                    size: self.size
            RboBtn:
                id: confirm
                size_hint: (.6, .4)
                text: "Confirmer"
                disabled: True
    BoxLayout:
        orientation: "vertical"
        size_hint: (.9, 1)
        canvas.before:
            Color:
                rgb: middle
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: root.name
            font_size: 20
    Players:
        size_hint: (.7, 1)
        background: dark