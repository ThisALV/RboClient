#:kivy 2.0.0

<SessionCtxActions>:
    DisconnectAction:
        id: disconnect

<GameLog>:
    size_hint: (1, None)
    text_size: (self.width, None)
    size: self.texture_size
    halign: "center"

<LogsMsg>:
    font_size: 17

<LogsTitle>:
    font_size: 30
    bold: True

<GameLogs>:
    background: bright

<Dices>:
    rollFinished: self.rollingDelayMs >= self.lastRollingDelayMs
    font_name: "DejaVuSans"
    font_size: "120"
    bold: True
    halign: "center"
    text_size: (self.width, None)
    size: self.texture_size

<DiceRoll>:
    orientation: "vertical"
    rollAnimation: rollAnimation
    canvas.before:
        Color:
            rgb: dark
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: 15
        BoxLayout:
            orientation: "vertical"
            Label:
                font_size: 30
                text: root.message
                text_size: (self.width, None)
                size: self.texture_size
                halign: "center"
            Label:
                font_size: 20
                italic: True
                text: "" if root.bonus == 0 else "{} : {}".format("Bonus" if root.bonus > 0 else "Malus", root.bonus)
            Label:
                font_size: 25
                text: "Résultat : " + str(sum(root.result) + root.bonus)
                color: [1, 1, 1, 1 if rollAnimation.rollFinished else 0]
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        padding: (5, 20)
        Dices:
            id: rollAnimation
            dices: root.dices
    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, .2)
        padding: 5
        RboBtn:
            size_hint: (.75, 1)
            text: "Terminé" if rollAnimation.rolled else "Lancer les dés"
            on_release: root.next()
        RboBtn:
            size_hint: (.25, 1)
            text: ">>"
            background_color: [.5, .5, .5]
            on_release: root.next(skip=True)

<Player>:
    orientation: "vertical"
    size_hint: (1, None)
    height: 150
    padding: 15
    stats: stats
    canvas.before:
        Color:
            rgb: white if self.selected else dark
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, None)
        height: 30
        AnchorLayout:
            anchor_x: "left"
            Label:
                size_hint: (None, 1)
                width: self.height
                color: dark
                text: str(root.playerID)
                font_size: 20 if root.selected else 15
                bold: True
                canvas.before:
                    Color:
                        rgb: [1, 1, 0] if root.isLeader and not root.selected else white
                    Rectangle:
                        pos: self.pos
                        size: self.size
        Label:
            bold: root.isSelf
            text: root.name
            font_size: 20
            color: dark if root.selected else white
        AnchorLayout:
            anchor_x: "right"
            Label:
                size_hint: (None, 1)
                width: self.height
                bold: True
                font_name: "DejaVuSans"
                font_size: self.height
                text: root.requestStatus[root.hasReplied][0]
                color: root.requestStatus[root.hasReplied][1]
    Label:
        size_hint: (1, None)
        height: 40
        text: "Stats les + importantes du joueur :"
        text_size: self.size
        halign: "left"
        valign: "center"
        color: dark if root.selected else white
    DictionnaryView:
        id: stats
        background: white if root.selected else dark
        foreground: dark if root.selected else white

<InventoriesView>:
    background: darker

<Inventory>:
    orientation: "vertical"
    title: title
    size_hint: (1, None)
    height: (50 * (self.count // 2 + 1) + 20) if self.shown else 20
    itemsView: itemsView
    Label:
        id: title
        size_hint: (1, None)
        text_size: (self.width, 20)
        size: self.texture_size
        halign: "left"
        font_size: 15
        font_name: "DejaVuSans"
        markup: True
        text: "[b]{} {} :[/b] [i]{}/{}[/i]".format("\u25bc" if root.shown else "\u25ba", root.name, root.count, "\u221e" if root.capacity == -1 else root.capacity)
    AnchorLayout:
        id: itemsView
        anchor_x: "center"
        anchor_y: "center"
        padding: (10, 0)

<StatsDetailLayout@AnchorLayout>:
    anchor_x: "center"
    anchor_y: "center"
    padding: (0, 10)
    size_hint: (.8, None)

<StatsDetail@DictionnaryView>:
    background: darker

<DetailsLayout>:
    # En attendant que le widget soit affiché (et donc qu'il ait un parent), on lui donne une taille nulle
    size_hint: (1, None)
    height: 0 if self.parent is None else self.parent.height / 2
    padding: 15

<DetailsTitle@Label>:
    size_hint: (1, None)
    height: 100
    text_size: (self.width, None)
    size: self.texture_size
    halign: "left"
    valign: "center"
    font_size: 25
    bold: True

<Detail@Label>:
    size_hint: (1, None)
    height: 30
    text_size: self.size
    halign: "left"
    font_size: 20

<PlayerDetail@Detail>:
    height: 30

<GameDetails>:
    mainStats: mainStats
    spacing: 10
    DetailsTitle:
        text: root.gameName
    Detail:
        text: "Leader : " + str(root.leader)
    StackLayout:
        DetailsTitle:
            text: "Stats communes les + importantes :"
        StatsDetailLayout:
            height: 150
            StatsDetail:
                id: mainStats

<GlobalDetails>:
    stats: stats
    DetailsTitle:
        text: "Toutes les stats communes :"
    StatsDetailLayout:
        height: 250
        StatsDetail:
            id: stats

<PlayerDetails>:
    stats: stats
    inventories: inventories
    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, None)
        height: 50
        DetailsTitle:
            text: "Infos sur le joueur [{}] {} :".format(root.id, root.name)
        AnchorLayout:
            size_hint: (.25, 1)
            anchor_x: "right"
            RboBtn:
                size_hint: (None, None)
                size: (30, 30)
                text: "\u00d7"
                font_size: 20
                on_release: root.dispatch("on_close")
    Detail:
        text: "Leader : " + ("\u2713" if root.leader else "\u00d7")
        color: [0, 1, 0] if root.leader else [1, 0, 0]
        font_name: "DejaVuSans"
    ScrollView:
        size_hint: (1, None)
        height: 250
        do_scroll_x: False
        do_scroll_y: True
        effect_cls: "ScrollEffect"
        BoxLayout:
            orientation: "vertical"
            size_hint: (1, None)
            height: 550
            PlayerDetail:
                text: "Toutes les stats du joueur :"
            StatsDetailLayout:
                size_hint: (1, None)
                height: 150
                StatsDetail:
                    id: stats
            PlayerDetail:
                text: "Tous les inventaires du joueur :"
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                size_hint: (.8, None)
                height: 300
                padding: (0, 10)
                InventoriesView:
                    id: inventories
            Widget:
                # Pour prendre l'espace vide restant

<Details>:
    gameDetails: gameDetails
    canvas.before:
        Color:
            rgb: middle
        Rectangle:
            pos: self.pos
            size: self.size
    GameDetails:
        id: gameDetails

<Session>:
    orientation: "horizontal"
    gameplay: gameplay
    logs: logs
    confirm: confirm
    detailsScreen: detailsScreen
    players: players
    BoxLayout:
        orientation: "vertical"
        size_hint: (1.4, 1)
        Gameplay:
            id: gameplay
            size_hint: (1, 3.5)
            GameLogs:
                id: logs
                pos_hint: {"x": 0, "y": 0}
                size_hint: (1, 1)
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            canvas.before:
                Color:
                    rgb: middle
                Rectangle:
                    pos: self.pos
                    size: self.size
            RboBtn:
                id: confirm
                size_hint: (.6, .4)
                text: "Continuer"
                disabled: True
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        id: detailsScreen
    Players:
        id: players
        size_hint: (.7, 1)