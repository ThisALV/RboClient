#:kivy 2.0.0

<SessionCtxActions>:
    DisconnectAction:
        id: disconnect

<Players>:
    size_hint: (.7, 1)

<Session>:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        size_hint: (1.4, 1)
        FloatLayout:
            size_hint: (1, 3.5)
            canvas.before:
                Color:
                    rgb: bright
                Rectangle:
                    pos: self.pos
                    size: self.size
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            canvas.before:
                Color:
                    rgb: middle
                Rectangle:
                    pos: self.pos
                    size: self.size
    BoxLayout:
        orientation: "vertical"
        size_hint: (.9, 1)
        canvas.before:
            Color:
                rgb: middle
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: root.name
            font_size: 20
    Players:
        size_hint: (.7, 1)
        background: dark