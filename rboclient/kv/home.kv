#:kivy 2.0.0

<HomeInput>:
    multiline: False
    font_size: self.height - 15
    background_color: [.05, .05, .05, 1]
    foreground_color: [1, 1, 1, 1]
    hint_text_color: [.7, .7, .7, 1]
    write_tab: False

<PortInput>:
    hint_text: "Port"

<LocalhostOption>:
    orientation: "horizontal"
    size_hint: (1, None)
    height: 30
    padding_y: 20
    CheckBox:
        id: checkbox
        size_hint: (.1, 1)
        color: [1, .5, 0, 1]
    Label:
        text: "HÃ´te local ?"
        color: [.8, .8, .8, 1]
        haligh: "left"
        valign: "center"
        font_size: 20
        text_size: (self.width, self.height)
        size: self.texture_size

<Home>:
    anchor_x: "center"
    anchor_y: "center"
    canvas.before:
        Color:
            rgb: .2, .2, .2
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: form
        orientation: "vertical"
        size_hint: (None, None)
        size: (400, 500)
        padding: (30, 40)
        spacing: 10
        canvas.before:
            Color:
                rgb: tbarColor
            RoundedRectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: host
            orientation: "horizontal"
            size_hint: (1, None)
            height: 40
            HomeInput:
                id: address
                hint_text: "Adresse"
            Label:
                text: ":"
                size_hint: (None, 1)
                width: 10
                padding_y: 15
                font_size: 30
                valign: "center"
                color: [.7, .7, .7, 1]
            PortInput:
                id: port
                size_hint: (.4, 1)
        AnchorLayout:
            id: isLocalhost
            anchor_x: "left"
            anchor_y: "center"
            size_hint: (1, None)
            height: 40
            LocalhostOption:
                id: option
