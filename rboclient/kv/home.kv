#:kivy 2.0.0

<HomeCtxActions>:
    anchor_x: "left"
    button: button
    padding: [2, 0]
    RboBtn:
        id: button
        size_hint: (None, None)
        size: tbarButtonSize
        text: "\u2699"

<Home>:
    anchor_x: "center"
    anchor_y: "center"
    hostInput: host
    playerInput: player
    localhostOption: localhost
    masterOption: master
    canvas.before:
        Color:
            rgb: middle
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        size_hint: (None, None)
        size: (375, 420)
        padding: (30, 40)
        spacing: 10
        canvas.before:
            Color:
                rgb: dark
            RoundedRectangle:
                pos: self.pos
                size: self.size
        HostInput:
            id: host
        LocalhostOption:
            id: localhost
            input: root.hostInput
        Separator:
        PlayerInput:
            id: player
        MasterOption:
            id: master
            input: root.playerInput
        Separator:
        RboBtn:
            size_hint: (1, None)
            height: 50
            text: "Connexion"
            font_size: 25
            on_release: root.login()
